<UserControl x:Class="E_SkiLift.Windows.User_Controls.CompanySummaryUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:oxy="http://oxyplot.org/wpf"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:E_SkiLift.Windows.User_Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Canvas HorizontalAlignment="Left" Height="430" Margin="6,10,0,0" VerticalAlignment="Top" Width="578">
            <DatePicker Name="From" Canvas.Left="65" Canvas.Top="34"/>
            <DatePicker Name="To" Canvas.Left="200" Canvas.Top="34"/>
            <Label Content="From" Height="29" Canvas.Left="65" Canvas.Top="10" Width="102"/>
            <Label Content="To" Height="29" Canvas.Left="200" Canvas.Top="10" Width="102"/>
            <Button Content="Show lift usage" Name="Summary" Canvas.Left="358" Canvas.Top="19" Width="145" Click="showLiftUsage_Click"/>
            <Button Content="Show sales summary" x:Name="Summary_Copy" Canvas.Left="358" Canvas.Top="53" Width="145" Click="showSummary_Click"/>
            
             
            

        </Canvas>
    </Grid>
</UserControl>
